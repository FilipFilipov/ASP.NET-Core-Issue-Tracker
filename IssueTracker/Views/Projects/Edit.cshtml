@model IssueTracker.Services.Models.ProjectViewModel

@{
    ViewBag.Title = "Edit Project";
}

<h2>Edit Project</h2>
<div class="row">
    <div class="col-md-6">
        <section>
            @Html.Partial("_ProjectForm", Model)
        </section>
    </div>   
    <div class="col-md-6">
        <section>
            @Html.Partial("_Issues", Model.Issues)
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@using IssueTracker.Data.Models
@model IssueTracker.Services.Models.ProjectViewModel

@{
    ViewBag.Title = "Create Project";
    var users = ViewBag.UserList as SelectListItem[];
}

<h2>Create Project</h2>
<div class="row">
    <div class="col-md-6">
        <section>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="LeaderId"></label>
                    <select asp-for="LeaderId" class="form-control" asp-items="@users">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="LeaderId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PriorityIds"></label>
                    <select asp-for="PriorityIds" class="form-control" asp-items="@(Html.GetEnumSelectList<PriorityType>())">
                    </select>
                    <span asp-validation-for="PriorityIds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LabelsString"></label>
                    <input asp-for="LabelsString" class="form-control" />
                    <span asp-validation-for="LabelsString" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </form>
        </section>
    </div>   
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}